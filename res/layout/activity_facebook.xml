<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacebookActivity" >

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/profilepiximageView"
        android:layout_below="@+id/profilepiximageView"
        android:layout_marginTop="24dp"
        android:background="#33b5e5" >
        
         
    </View>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view1"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="What's on your mind?"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/updatebutton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/view1"
        android:layout_marginRight="14dp"
        android:layout_marginTop="4dp"
        android:text="update"
        android:background="#ffffff" />

    <ImageView
        android:id="@+id/profilepiximageView"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/displaynametextView" />

    <TextView
        android:id="@+id/displaynametextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/profilepiximageView"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/locationtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profilepiximageView"
        android:layout_alignLeft="@+id/emailtextView"
        android:text="location" />

    <TextView
        android:id="@+id/emailtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/locationtextView"
        android:layout_toRightOf="@+id/profilepiximageView"
        android:text="Email" />

    <TextView
        android:id="@+id/gendertextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailtextView"
        android:layout_alignLeft="@+id/emailtextView"
        android:text="Gender" />

</RelativeLayout>
